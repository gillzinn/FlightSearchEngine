<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="fxAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1200.0" styleClass="Pane" stylesheets="@../stylesheets/styles.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vidmot.ViewController">
    <BorderPane fx:id="fxAdalBorder" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0"
                style="-fx-background-color: rgb(239, 240, 242); -fx-background-radius: 10 10 10 10;"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <top>
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                        prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: #ffffff;"
                        styleClass="topPane">

                <ImageView fitHeight="16.0" fitWidth="16.0" layoutX="16.0" layoutY="43.0" pickOnBounds="true"
                           preserveRatio="true" AnchorPane.topAnchor="22.0">
                    <image>
                        <Image url="@../stylesheets/Icons/plane1.png"/>
                    </image>
                </ImageView>

            </AnchorPane>
        </top>
        <left>


        </left>
        <center>
            <BorderPane fx:id="fxBorderCenter" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" prefHeight="740.0" prefWidth="900.0" BorderPane.alignment="TOP_CENTER">
                <center>
                    <VBox fx:id="fxMidjuPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                          minWidth="-Infinity" prefHeight="320.0" prefWidth="400.0" styleClass="MidjuPane"
                          BorderPane.alignment="CENTER">
                        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                              prefHeight="320.0" prefWidth="400.0">
                            <Label fx:id="fxCredentials" text="Login">
                                <VBox.margin>
                                    <Insets bottom="15.0"/>
                                </VBox.margin>

                            </Label>

                            <Label text="Name:">
                                <VBox.margin>
                                    <Insets bottom="2.0"/>
                                </VBox.margin>
                            </Label>
                            <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                  prefHeight="25.0" prefWidth="350.0" styleClass="Search-border">
                                <TextField fx:id="fxLoginName" layoutY="-1.0" maxHeight="-Infinity" maxWidth="-Infinity"
                                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
                                           prefWidth="350.0" styleClass="Searchfield"/>

                            </Pane>
                            <Label text="Password:">
                                <VBox.margin>
                                    <Insets bottom="2.0" top="2.0"/>
                                </VBox.margin>
                            </Label>
                            <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                  prefHeight="25.0" prefWidth="350.0" styleClass="Search-border">
                                <TextField fx:id="fxLoginPassword" layoutY="-1.0" maxHeight="-Infinity"
                                           maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                           prefHeight="25.0" prefWidth="350.0" styleClass="Searchfield"/>
                                <VBox.margin>
                                    <Insets/>
                                </VBox.margin>

                            </Pane>
                            <Label fx:id="fxLoginError" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                   minWidth="-Infinity" prefHeight="100.0" prefWidth="350.0">
                            </Label>


                            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                  prefHeight="50.0" prefWidth="350.0">

                                <Button fx:id="fxNewUser" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                                        minHeight="-Infinity" minWidth="-Infinity" onMousePressed="#NewUser"
                                        prefHeight="30.0" prefWidth="75.0" styleClass="Button1" text="New User">
                                    <HBox.margin>
                                        <Insets right="200.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="fxLoginButton" alignment="CENTER" maxHeight="-Infinity"
                                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                        onMousePressed="#Login" prefHeight="30.0" prefWidth="75.0" styleClass="Button1"
                                        text="Login">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <VBox.margin>
                                    <Insets top="10.0"/>
                                </VBox.margin>
                            </HBox>
                            <padding>
                                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                            </padding>
                        </VBox>
                    </VBox>

                </center>
            </BorderPane>

        </center>
        <right>

        </right>


    </BorderPane>

</AnchorPane>
